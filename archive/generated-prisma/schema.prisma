generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  phone        String?
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Players {
  id            String   @id @default(cuid())
  email         String   @unique
  sport         String?
  displayName   String?
  speciality    String?
  description   String?
  contactNumber String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Arena {
  id        String   @id @default(cuid())
  name      String?
  location  String?
  sport     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
