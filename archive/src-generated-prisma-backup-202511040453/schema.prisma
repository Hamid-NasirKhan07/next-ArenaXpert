generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  phone        String?
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Players {
  id            String   @id @default(cuid())
  email         String   @unique
  sport         String?
  displayName   String?
  speciality    String?
  description   String?
  contactNumber String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Arena {
  id             String        @id @default(cuid())
  name           String?
  location       String?
  sport          String?
  arenaDetails   Json?
  ownerProfileId String?
  ownerProfile   OwnerProfile? @relation(fields: [ownerProfileId], references: [id])
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  message   String
  status    String   @default("pending") // pending, resolved, closed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OwnerProfile {
  id             String   @id @default(cuid()) // acts as userId visible to owners
  supabaseUserId String   @unique
  firstName      String
  lastName       String
  username       String   @unique
  phone          String
  province       String
  city           String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  arenas         Arena[]
}
